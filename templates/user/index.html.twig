{% extends 'base.html.twig' %}

{% block title %}Usuarios{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1>Usuarios</h1>
                <a href="{{ path('admin_users_create') }}" class="btn btn-success">Criar Usuario</a>
            </div>
            <hr>
        </div>

        <div class="col-12">
            <table class="table">
                <thead>

                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Ações</th>
                </tr>

                </thead>
                <tbody>
                {% for user in users  %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.name }}</td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <a href="{{ path('admin_users_edit', {user: user.id}) }}" class="btn btn-sm btn-primary">Editar</a>
                            <a href="{{ path('admin_users_remove', {user: user.id}) }}" class="btn btn-sm btn-danger">Remover</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}